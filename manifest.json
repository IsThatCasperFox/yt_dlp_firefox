{
  "manifest_version": 2,
  "name": "youtube-dl downloader",
  "description": "Download media using youtube-dl",
  "version": "0.1",
  "icons": {
    "48": "icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube_dl_firefox@tyilo.com",
      "strict_min_version": "80.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.svg",
    "default_popup": "popup-dist/index.html",
    "browser_style": true
  },
  "permissions": ["nativeMessaging", "contextMenus", "notifications"]
}
